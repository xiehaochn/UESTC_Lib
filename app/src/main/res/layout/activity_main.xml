<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"

    >
    <include
        layout="@layout/base_toolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
    />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/base_background"
        >
        <com.hawx.uestc_lib.widget.CustomViewPager
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activity_viewpager"
            >
        </com.hawx.uestc_lib.widget.CustomViewPager>
        <com.hawx.uestc_lib.widget.ViewPagerTabPoints
            android:id="@+id/activity_viewpagertabpoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/activity_viewpager"
            android:layout_marginBottom="10dp"
            android:layout_centerHorizontal="true"
            app:pointsColor="@android:color/white"
            app:interval="13dp"
            />
        <RelativeLayout
            android:id="@+id/activity_main_relativelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/base_text_background"
            android:layout_below="@id/activity_viewpager"
            android:layout_marginTop="1dp"
            >
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_alignParentStart="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@android:color/white"
                android:text="图书分类"
                android:padding="1dp"
                android:gravity="center"
                android:layout_alignParentLeft="true" />
            <TextView
                android:id="@+id/activity_main_textbutton_more"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:padding="1dp"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:text="@string/more"
                android:layout_marginEnd="5dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp" />
        </RelativeLayout>

        <android.support.v7.widget.GridLayout
            android:id="@+id/activity_main_gridlayout"
            android:layout_below="@id/activity_main_relativelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:columnCount="3"
            app:rowCount="6"
            app:orientation="horizontal"
            android:padding="5dp"
            >
        <Button
            android:id="@+id/activity_main_button_242"
            android:theme="@style/TextViewButton"
            app:layout_columnWeight="1"
            android:text="中国文学"
            android:background="@drawable/button_background"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp" />
            <Button
                android:id="@+id/activity_main_button_252"
                android:theme="@style/TextViewButton"
                android:text="人物传记"
                app:layout_columnWeight="1"
                android:background="@drawable/button_background"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                />
            <Button
                android:id="@+id/activity_main_button_244"
                android:theme="@style/TextViewButton"
                android:text="儿童文学"
                app:layout_columnWeight="1"
                android:background="@drawable/button_background"
                />
            <Button
                android:id="@+id/activity_main_button_248"
                android:theme="@style/TextViewButton"
                app:layout_columnWeight="1"
                android:text="历史"
                android:background="@drawable/button_background"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                />
            <Button
                android:id="@+id/activity_main_button_257"
                android:theme="@style/TextViewButton"
                android:text="哲学"
                app:layout_columnWeight="1"
                android:background="@drawable/button_background"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                />
            <Button
                android:id="@+id/activity_main_button_243"
                android:theme="@style/TextViewButton"
                android:text="外国文学"
                app:layout_columnWeight="1"
                android:background="@drawable/button_background"
                android:layout_marginTop="5dp"
                />
        </android.support.v7.widget.GridLayout>
        <ImageView
            android:id="@+id/activity_main_splitline"
            android:layout_below="@id/activity_main_gridlayout"
            android:layout_width="match_parent"
            android:layout_height="1dp"

            />
    <RelativeLayout
        android:id="@+id/activity_main_relativelayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/base_text_background"
        android:layout_below="@id/activity_main_splitline"
        android:layout_marginTop="1dp"
        >
        <TextView
            android:id="@+id/activity_main_textview"
            android:layout_alignParentStart="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:text="今日推荐"
            android:layout_marginLeft="5dp"
            android:padding="1dp"
            android:gravity="center"
            android:layout_alignParentLeft="true" />
        <android.support.v7.widget.RecyclerView
            android:layout_below="@id/activity_main_textview"
            android:layout_marginTop="2dp"
            android:id="@+id/activity_main_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark"
            >

        </android.support.v7.widget.RecyclerView>
        </RelativeLayout>
        <com.hawx.uestc_lib.widget.WaitingDialog
            android:id="@+id/activity_main_waitingdialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            app:isTextShow="true"
            app:text="加载中"
            app:speed="13"
            app:arcColor="@android:color/white"
            app:textColor="@android:color/white"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/activity_main_relativelayout"
            android:layout_marginTop="10dp"
            />
    </RelativeLayout>
</LinearLayout>