<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/viewholder_bookdetail_cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2dp"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:layout_marginTop="4dp"

    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <RelativeLayout
            android:id="@+id/widget_bookdetaildialog_relativelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/widget_bookdetaildialog_imageview"
            android:padding="1dp"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/book_default"
            android:adjustViewBounds="true"
            />
        <TextView
            android:id="@+id/widget_bookdetaildialog_booktitle"
            android:layout_toRightOf="@id/widget_bookdetaildialog_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="书名"
            android:textStyle="bold"
            android:textSize="23sp"
            android:textColor="@color/colorPrimary"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"

            />


        <TextView
            android:id="@+id/widget_bookdetaildialog_reading"
            android:layout_below="@id/widget_bookdetaildialog_booktitle"
            android:layout_toRightOf="@id/widget_bookdetaildialog_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1000人读过"
            android:textSize="13sp"
            android:textColor="@android:color/darker_gray"
            android:background="@drawable/viewholder_reading_background"
            android:gravity="center"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            />
        <ImageView
            android:id="@+id/widget_bookdetaildialog_imageview1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/widget_bookdetaildialog_reading"
            android:layout_toRightOf="@id/widget_bookdetaildialog_imageview"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:background="@android:color/transparent"
            android:src="@mipmap/veiwholder_bookdetail_tagsbutton"
            />
        <TextView
            android:id="@+id/widget_bookdetaildialog_tag"
            android:layout_below="@id/widget_bookdetaildialog_reading"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/widget_bookdetaildialog_imageview1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="testTags testTags testTags testTags testTags testTags "
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:gravity="left"
            android:textSize="13sp"
            android:textColor="@color/colorPrimaryDark"
            android:lineSpacingMultiplier="1.5"
            />
        </RelativeLayout>
        <ScrollView
            android:layout_below="@id/widget_bookdetaildialog_relativelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
        <TextView
            android:id="@+id/widget_bookdetaildialog_brief"
            android:text="111111111111111111111111111"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="15sp"
            android:textColor="@color/colorPrimaryDark"
             />
        <TextView
            android:id="@+id/widget_bookdetaildialog_dangdangwang"
            android:layout_below="@id/widget_bookdetaildialog_brief"
            android:textSize="18sp"
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dangdangwang"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="5dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp" />
        <TextView
            android:id="@+id/widget_bookdetaildialog_jingdong"
            android:layout_toLeftOf="@id/widget_bookdetaildialog_dangdangwang"
            android:layout_below="@id/widget_bookdetaildialog_brief"
            android:textSize="18sp"
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/jingdong"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="15dp"
            />
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>

</android.support.v7.widget.CardView>