<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:paddingTop="15dp"
    android:paddingEnd="5dp"
    android:paddingStart="5dp"

    >
    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        app:columnCount="2"
        app:rowCount="5"
        >
        <TextView
            android:padding="2dp"
            android:text="馆藏地："
            />
        <TextView
            android:padding="2dp"
            android:id="@+id/widget_tablelayout_locallib"
            />
        <TextView
            android:padding="2dp"
            android:text="索书号："
            />
        <TextView
            android:padding="2dp"
            android:id="@+id/widget_tablelayout_num"
            />
        <TextView
            android:padding="2dp"
            android:text="图书状态："
            />
        <TextView
            android:padding="2dp"
            android:id="@+id/widget_tablelayout_state"
            />
        <TextView
            android:padding="2dp"
            android:text="条码："
            />
        <TextView
            android:padding="2dp"
            android:id="@+id/widget_tablelayout_localnum"
            />
        <TextView
            android:padding="2dp"
            android:text="备注："
            />
        <TextView
            android:padding="2dp"
            android:id="@+id/widget_tablelayout_remark"
            />

    </android.support.v7.widget.GridLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_gravity="center_vertical"
            android:padding="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="详细位置："
            />
        <TextView
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/widget_tablelayout_localdetail"
            android:layout_weight="4"
            />
        <ImageButton
            android:layout_alignParentTop="true"
            android:id="@+id/widget_tablelayout_loactionbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:src="@mipmap/icon_searchactivity_button"
            android:layout_alignParentRight="true"
            android:background="@android:color/transparent"
            />
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black"
        android:padding="2dp"
        android:layout_marginTop="5dp"

        />
</LinearLayout>