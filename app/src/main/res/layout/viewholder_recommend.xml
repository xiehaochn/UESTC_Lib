<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/recommend_pic_background"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="10dp"
    android:id="@+id/viewholder_relativelayout"
    >
    <ImageView
        android:layout_marginTop="5dp"
        android:padding="5dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/viewholder_pic"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:adjustViewBounds="true"
        android:src="@drawable/book_default"

        />
    <TextView
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:id="@+id/viewholder_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="天涯明月刀"
        android:layout_below="@id/viewholder_pic"
        android:layout_marginTop="5dp"
        android:padding="5dp"
        android:textSize="12sp"
        android:textColor="@android:color/black"

        />

</RelativeLayout>