<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/viewholder_bookdetail_cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <ImageView
        android:id="@+id/viewholder_bookdetail_bookpic"
        android:padding="1dp"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/book_default"
        android:adjustViewBounds="true"
        />
    <TextView
        android:id="@+id/viewholder_bookdetail_booktitle"
        android:layout_toRightOf="@id/viewholder_bookdetail_bookpic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="书名"
        android:textStyle="bold"
        android:textSize="23sp"
        android:textColor="@color/colorPrimary"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        />


        <TextView
            android:id="@+id/viewholder_bookdetail_reading"
            android:layout_below="@id/viewholder_bookdetail_booktitle"
            android:layout_toRightOf="@id/viewholder_bookdetail_bookpic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1000人读过"
            android:textSize="13sp"
            android:textColor="@android:color/darker_gray"
            android:background="@drawable/viewholder_reading_background"
            android:gravity="center"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>